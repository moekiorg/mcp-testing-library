{
  "name": "mcp-testing-library",
  "version": "1.0.3",
  "description": "A CLI tool for running Model Context Protocol (MCP) tests",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mcpt": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:mcp": "node ./src/bin/cli.js",
    "test:mcp:verbose": "node ./src/bin/cli.js --verbose",
    "test:mcp:src": "node ./src/bin/cli.js --exclude=\"**/node_modules/**,**/dist/**\" \"src/**/*.test.{js,ts}\"",
    "test:mcp:quick": "node ./src/bin/cli.js --timeout=5000",
    "cli": "node ./src/bin/cli.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\""
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/commander": "^2.12.0",
    "@types/node": "^20.8.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.3",
    "vitest": "^0.34.6"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "@types/chai-as-promised": "^8.0.2",
    "chai": "^5.2.0",
    "chai-as-promised": "^8.0.1",
    "chalk": "^4.1.2",
    "commander": "^13.1.0",
    "minimatch": "^9.0.0",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "zod": "^3.24.2"
  }
}
