{
  "compilerOptions": {
    "target": "es2017",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "lib": ["es2017", "esnext.asynciterable", "dom"],
    "types": ["node"]
  },
  "include": ["src/**/*", "bin"],
  "exclude": ["node_modules", "sample"]
}
